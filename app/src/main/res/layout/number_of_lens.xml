<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ruler"
        android:src="@drawable/ruler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:contentDescription="@string/ruler" />

    <opticallearning.learnoptics.DrawingView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLaser"
        android:src="@drawable/laser_front"
        android:scaleType="fitXY"
        android:contentDescription="@string/laser"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="100sp"
        android:id="@+id/len1"
        android:background="@drawable/border"
        android:visibility="invisible"
        android:contentDescription="@string/lens"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/len2"
        android:layout_marginRight="45dp" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="100sp"
        android:id="@+id/len2"
        android:background="@drawable/border"
        android:visibility="invisible"
        android:contentDescription="@string/lens"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="100sp"
        android:id="@+id/len3"
        android:background="@drawable/border"
        android:visibility="invisible"
        android:contentDescription="@string/lens"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/len2"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/dectOne"
        android:src="@drawable/detector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/detector" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/dectTwo"
        android:src="@drawable/detector"
        android:layout_above="@+id/len1"
        android:layout_alignLeft="@+id/dectOne"
        android:layout_alignStart="@+id/dectOne"
        android:contentDescription="@string/detector" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/dectThree"
        android:src="@drawable/detector"
        android:layout_below="@+id/len1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/detector" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinCount"
        android:background="@drawable/border"
        android:layout_alignTop="@+id/view"
        android:layout_centerHorizontal="true"
        android:padding="5sp" />

</RelativeLayout>