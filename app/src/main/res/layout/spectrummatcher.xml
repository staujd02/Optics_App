<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="false">

        <ImageView
            android:id="@+id/imgSubject"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/sample_subject"
            android:background="@drawable/border"
            android:cropToPadding="false"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:contentDescription="@string/specSubject"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specDescip"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="158dp"
            android:layout_height="65dp"
            android:id="@+id/btnSpectrum"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/small_spectrum"
            android:layout_rowSpan="2"
            android:layout_gravity="left|center_vertical|right"
            android:layout_marginRight="10sp"
            android:scaleType="center"
            android:paddingLeft="5dp"
            android:clickable="false"
            android:contentDescription="@string/spectrum" />
    </GridLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/chrtOne"
                android:src="@drawable/diorite"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:contentDescription="@string/chrtOne" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/chrtTwo"
                android:src="@drawable/diorite"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:contentDescription="@string/chrtTwo" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/chrtThree"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/diorite"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:contentDescription="@string/chrtThree" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/chrtFour"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/diorite"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:contentDescription="@string/chrtFour" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>