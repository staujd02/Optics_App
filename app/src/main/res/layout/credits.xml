<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_gravity="left|right">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/njit_logo"
            android:layout_weight="7"
            android:contentDescription="@string/njit"
            android:scaleType="center"
            android:background="@drawable/njit_back" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:src="@drawable/nsf_ico"
            android:contentDescription="@string/nsf"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:background="@drawable/border" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credits_title"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="7dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credits_main"
        android:id="@+id/textView7"
        android:textStyle="normal"
        android:typeface="sans"
        android:textColor="#000000"
        android:paddingRight="5dp"
        android:paddingLeft="7dp" />

</LinearLayout>