<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="opticallearning.learnoptics">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light">
        <activity android:name="opticallearning.learnoptics.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LensCraft"
            android:screenOrientation="landscape"/>
        <activity android:name=".BrightSource"
            android:screenOrientation="portrait"/>
        <activity android:name=".Medium"
            android:screenOrientation="portrait"/>
        <activity android:name=".SpectrumMatcher"/>
        <activity android:name=".Credits"/>
        <activity android:name=".Portal"/>
        <activity android:name=".BGBrightSource"/>
        <activity android:name=".BGLensCraft"/>
        <activity android:name=".BGMedium"/>
        <activity android:name=".BGSpectrumMatcher"/>
        <activity android:name=".BeamCount"
            android:screenOrientation="landscape"/>
        <activity android:name=".concaveconvex"
            android:screenOrientation="landscape"/>
        <activity android:name=".Distances"
            android:screenOrientation="landscape"/>
        <activity android:name=".NIndex"
            android:screenOrientation="landscape"/>
        <activity android:name=".NumberOfLens"
            android:screenOrientation="landscape"/>
        <activity android:name=".LensWidth"
            android:screenOrientation="landscape"/>
        <activity android:name=".LensCraftMenu"/>
    </application>
</manifest>